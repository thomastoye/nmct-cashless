<UserControl x:Class="nmct.ba.cashlessproject.vereniging.View.Account"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             xmlns:src="clr-namespace:nmct.ba.cashlessproject.vereniging.Converter"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <src:InvertBoolConverter x:Key="invertBoolConverter"/>
    </UserControl.Resources>
    <StackPanel>
        <TextBox Text="{Binding UserName}"/>
        <TextBox Text="{Binding Password}"/>
        <Button Content="Inloggen" IsEnabled="{Binding TokenOk, Converter={StaticResource invertBoolConverter}}" Command="{Binding LoginCommand}"/>
        <Button Content="Uitloggen" IsEnabled="{Binding TokenOk}" Command="{Binding LogoutCommand}"></Button>
        <Button Content="Paswoord wijzigen"></Button>
        <TextBox Text="{Binding ConString}"/>
    </StackPanel>
</UserControl>
